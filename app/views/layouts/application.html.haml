!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "WaypointManager"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="images/favicon.ico" rel="shortcut icon")


  %body
    .navbar.navbar-fluid-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Waypoint Manager", root_path, class: 'brand'
          
          .container.nav-collapse
            %ul.nav
              %li
                = link_to page_path("about") do
                  %i.icon-glass
                  = t(:about)
              %li
                = link_to areas_path do
                  %i.icon-globe
                  = t('area.plural')
              %li
                = link_to waypoints_path do
                  %i.icon-map-marker
                  = t('waypoint.plural')
              %li
                = link_to routes_path do
                  %i.icon-road
                  = t('route.plural')
              - if can? :manage, Importer
                %li
                  = link_to new_importer_path do
                    %i.icon-hdd
                    = t('importer.title')
              - if controller_name == "waypoints"
                %li
                  = link_to format: :gpx do
                    %i.icon-book
                    = t('waypoint.to_gpx')
              - if current_user
                %li
                  = link_to user_path(current_user) do
                    %i.icon-user
                    = current_user.email
                  - if current_user.admin
                    %strong
                      (ADMIN)
                %li
                  = link_to destroy_user_session_path, method: :delete do
                    %i.icon-off
                    = t('user_session.destroy')
              - else
                %li
                  = link_to new_user_session_path do
                    %i.icon-user
                    = t('user_session.new')
                %li
                  = link_to new_user_registration_path do
                    %i.icon-arrow-right
                    = t('user.register')

    .container-fluid

      .row-fluid
        .span3
          .well.sidebar-nav
            = render partial: '/layouts/navigation', locals: {klass: 'nav nav-list'}
        .span9
          = yield
    
      %footer
        %p &copy; Aleksander Kwiatkowski 2012
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
