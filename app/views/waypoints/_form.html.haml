= simple_form_for resource, html: {class: "form-horizontal"} do |f|
  = f.input :lat
  = f.input :lon
  = f.input :dms_coords
  = f.input :elevation
  = f.input :name
  = f.input :url
  = f.input :sym, as: :select, collection: Waypoint::SYMBOLS.keys, include_blank: false
  = f.input :area_id, as: :select, collection: Area.all

  = f.button :submit

- if resource.lon and resource.lat
  %p
    %b Maps:
    = waypoint_map_link_to(@waypoint)
