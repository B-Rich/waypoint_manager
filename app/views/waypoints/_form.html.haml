= simple_form_for resource, html: {class: "form-horizontal"} do |f|
  = f.input :lat
  = f.input :lon
  = f.input :dms_coords
  = f.input :elevation
  = f.input :name
  = f.input :url
  .control-group
    .controls
      = link_to t('open_url_in_new_window'), "javascript:void(0);", class: "btn url-link"
  = f.input :official_url
  = f.input :phone
  = f.input :email
  = f.input :sym, as: :select, collection: Waypoint::SYMBOLS.keys, include_blank: false
  = f.input :area_id, as: :select, collection: Area.order(:name).all

  = f.button :submit

- if resource.lon and resource.lat
  %p
    %b Maps:
    = waypoint_map_link_to(resource)
