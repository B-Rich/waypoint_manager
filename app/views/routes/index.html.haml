%h1 Listing routes

%table
  %tr
    %th Area
    %th Name
    %th Url
    %th Distance [m]
    %th Distance [min]

  - @routes.each do |route|
    %tr
      %td= route.area.name
      %td= route.name
      %td
        - unless route.url.blank?
          = link_to "URL", route.url
      %td= route.distance
      %td
        = route.time_distance_human
        (
        = route.time_distance
        min )
      - if can? :read, RouteElement
        %td= link_to 'Elements', route_route_elements_path(route)
      %td= link_to 'Show', route
      - if can? :edit, route
        %td= link_to 'Edit', edit_route_path(route)
      - if can? :destroy, route
        %td= link_to 'Destroy', route, :confirm => 'Are you sure?', :method => :delete

%br

- if can? :create, Route
  = link_to 'New Route', new_route_path
